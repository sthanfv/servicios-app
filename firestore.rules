rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users Collection
    // - Anyone can read public user profiles.
    // - A user can only create and update their own document.
    // - Admins can write to any user document (for future use).
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Deleting user documents is restricted for data integrity.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Services Collection
    // - Anyone can read services.
    // - Authenticated users can create services.
    // - Only the owner or an admin can update or delete a service.
    match /services/{serviceId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

        // Reviews Subcollection
        // - Authenticated users can read reviews.
        // - Authenticated users can write a review.
        match /reviews/{reviewId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null;
            // Only review owner or admin can update/delete
            allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        }
    }

    // Chats Collection
    // - Only participants of a chat can read or write to it.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // Messages Subcollection
      // - Only participants can read or write messages.
      match /messages/{messageId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants[0] == request.auth.uid || get(/databases/$(database)/documents/chats/$(chatId)).data.participants[1] == request.auth.uid;
      }
    }
  }
}