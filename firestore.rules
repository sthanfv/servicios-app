
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can be read by anyone, but only modified by the owner.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Services can be read by anyone, but only modified by the owner.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Reviews can be read by anyone, created by authenticated users, but not edited.
      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
      }
    }
    
    // Chats can only be accessed by participants.
    match /chats/{chatId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // Messages within a chat follow the same rule.
      match /messages/{messageId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        allow update, delete: if false;
      }
    }
  }
}
