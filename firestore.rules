rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read public profiles, but only write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Services can be read by anyone, but only created, updated, or deleted by the owner.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Reviews can be read by anyone, but only created by authenticated users.
      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if request.auth != null;
        allow update, delete: if false; // Reviews are immutable
      }
    }
    
    // Chat messages can only be read/written by participants.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
      	allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
